# ملف متغيرات البيئة - انسخ هذا الملف إلى .env واملأ القيم
# لا تشارك ملف .env أبداً - أضفه إلى .gitignore

# مفتاح Django السري - استخدم مفتاح قوي وعشوائي
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this

# وضع التطوير (True للتطوير، False للإنتاج)
DEBUG=False

# النطاقات المسموحة (مفصولة بفاصلة)
ALLOWED_HOSTS=essa.pythonanywhere.com

# إعدادات قاعدة البيانات (اختياري - للتبديل لـ PostgreSQL لاحقاً)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# إعدادات البريد الإلكتروني (اختياري)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
